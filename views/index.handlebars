<div class="container">
  <div class="jumbotron">
    <h1>Burgers Database!</h1>
    {{!-- <img src="../public/assets/img/burger.jpg" alt="Burgers!"> --}}
  </div>

  <div class="row">
    <div class="col-6">
      <h2>Burgers I have yet to devour!</h2>

      <ul>
        {{#each allBurgers}}
        {{#unless devoured}}
        <li><strong>Burger ID: </strong>{{id}} <button class="devour btn btn-light" data-id="{{id}}">
            Devour this!
          </button>
          <br>
          <strong>Burger Name: </strong>{{burger_name}}
          <br>
        </li>
        <br>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2>Burgers I have devoured!</h2>

      <ul>
        {{#each allBurgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true }}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <br>
    <br>
    <br>

    <div class="row">
      <div class="col">
        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="text" id="newBurger" name="name">
          </div>

          <div class="form-group">
            <label for="devour">Devour this burger right away??</label><br>
            <input type="radio" name="devour" value="1" checked> Not yet devoured!<br>
            <input type="radio" name="devour" value="0"> Devoured/Destoryed/Dominated
          </div>

          <button type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
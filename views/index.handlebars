<div class="container">
  <div class="jumbotron" style="text-align: center;">
    <img src="/public/assets/img/burger.jpg">
    <h1>Burger Database</h1>
  </div>

  <div class="row">
    <div class="col-6">
      <h2>Burgers I have yet to devour!</h2>

      <ul>
        {{#each allBurgers}}
        {{#unless this.devoured}}
        <li class="list-group-item">
          <div class="input-group">
            <p class="lead">{{this.burger_name}}</p>
            <span class="input-group-btn">

              <form action="burgers/update/{{id}}" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn btn-default btn-lg" type="submit">Devour it!</button>
              </form>
            </span>
          </div>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h2>Burgers I have devoured!</h2>

      <div class="panel panel-default">
        <ul class="list-group">
          {{#each allBurgers}}
          {{#if this.devoured}}
          <li class="list-group-item">
            <p class="lead">{{this.burger_name}}</p>
            {{> burgers/burger-block devour=true}}
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <br>
    <br>
    <br>

    <div class="row">
      <div class="col">
        <h2>Add a Burger</h2>
        <form class="create-form" action="burgers/create" method="POST">
          <div class="form-group">
            <textarea class="form-control input-lg" type="text" name="burger_name" row="3"></textarea>
          </div>
          <button class="btn btn-default btn-lg" type="submit">Submit</button>
        </form>
        </form>
      </div>
    </div>
  </div>
</div>